{
  "NewtonsMethod": {
    "params": {
      "image_specification": {
        "resolution": [1920, 1080],
        "center": [0, 0],
        "width": 2.0
      },
      "iteration_limits": [5, 200],
      "convergence_tolerance": 1e-4,
      "render_options": {
        "downsample_stride": 1,
        "subpixel_antialiasing": 0
      },
      "background_color_rgb": [0, 0, 0],
      "cyclic_attractor_color_rgb": [255, 0, 0],
      "root_colors_rgb": [
        [255, 255, 255],
        [255, 0, 0],
        [0, 255, 0],
        [0, 0, 255]
      ],
      "grayscale_keyframes": [
        { "query": 0.0, "value": 0.0 },
        { "query": 0.8, "value": 0.5 },
        { "query": 1.0, "value": 1.0 }
      ]
    },
    "system": {
      "RootsOfUnity": {
        "n_roots": 4,
        "newton_step_size": 1.0
      }
    }
  }
}
